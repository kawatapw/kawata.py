# c[e4]?.ppy.sh is used for bancho
# osu.ppy.sh is used for /web, /api, etc.
# a.ppy.sh is used for osu! avatars

upstream bancho {
    server 0.0.0.0:${APP_PORT};
    # NOTE: if you wish to use unix sockets,
    # server unix:/tmp/bancho.sock fail_timeout=0;
}

server {
	listen 80;
	listen 443 ssl;
	server_name c.${DOMAIN} ce.${DOMAIN} c4.${DOMAIN} b.${DOMAIN};
	client_max_body_size 20M;
	access_log /srv/root/.data/logs/nginx/access/bancho.${DOMAIN}.log;
	error_log /srv/root/.data/logs/nginx/error/bancho.${DOMAIN}.log;

	ssl_certificate     ${SSL_CERT_PATH};
	ssl_certificate_key ${SSL_KEY_PATH};
	ssl_ciphers "EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH:@SECLEVEL=1";

	location / {
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Real-IP  $remote_addr;
		proxy_set_header Host $http_host;
		add_header Access-Control-Allow-Origin *;
		proxy_redirect off;
		proxy_pass http://bancho;
	}
}


server {
	listen 80;
	listen 443 ssl;
	server_name osu.${DOMAIN};
	client_max_body_size 128M;
	access_log /srv/root/.data/logs/nginx/access/osu.${DOMAIN}.log;
	error_log /srv/root/.data/logs/nginx/error/osu.${DOMAIN}.log;

	location / {
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Real-IP  $remote_addr;
		proxy_set_header Host $http_host;
		add_header Access-Control-Allow-Origin *;
		proxy_redirect off;
		client_max_body_size 128M;
		proxy_pass http://bancho;
	}

	location /u {
    return 301 $scheme://${DOMAIN}$request_uri;
  }
}

server {
	listen 80;
	listen 443 ssl;
	server_name api.${DOMAIN}; 
	client_max_body_size 128M;
	access_log /srv/root/.data/logs/nginx/access/api.${DOMAIN}.log;
	error_log /srv/root/.data/logs/nginx/error/api.${DOMAIN}.log;

	location / {
		add_header 'Access-Control-Allow-Origin' 'https://${DOMAIN}' always;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Real-IP  $remote_addr;
		proxy_set_header Host $http_host;
		proxy_redirect off;
		client_max_body_size 128M;
		proxy_pass http://bancho;
	}
}

server {
	listen 80;
	listen 443 ssl;
	server_name assets.${DOMAIN};
	access_log /srv/root/.data/logs/nginx/access/assets.${DOMAIN}.log;
	error_log /srv/root/.data/logs/nginx/error/assets.${DOMAIN}.log;

	ssl_certificate     ${SSL_CERT_PATH};
	ssl_certificate_key ${SSL_KEY_PATH};
	ssl_ciphers "EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH:@SECLEVEL=1";

	location / {
		default_type image/png;
		root ${DATA_DIRECTORY}/assets;
	}
}

server {
	listen 80;
	listen 443 ssl;
	server_name storage.${DOMAIN};
	access_log /srv/root/.data/logs/nginx/access/storage.${DOMAIN}.log;
	error_log /srv/root/.data/logs/nginx/error/storage.${DOMAIN}.log;

	ssl_certificate     ${SSL_CERT_PATH};
	ssl_certificate_key ${SSL_KEY_PATH};
	ssl_ciphers "EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH:@SECLEVEL=1";

	location /get/ {
		# default_type application/zip;
		alias ${DATA_DIRECTORY}/storage/;
	}
}

server {
	listen 80;
	listen 443 ssl;
	server_name a.${DOMAIN};
	access_log /srv/root/.data/logs/nginx/access/a.${DOMAIN}.log;
	error_log /srv/root/.data/logs/nginx/error/a.${DOMAIN}.log;

	ssl_certificate     ${SSL_CERT_PATH};
	ssl_certificate_key ${SSL_KEY_PATH};
	ssl_ciphers "EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH:@SECLEVEL=1";

	location / {
		root ${DATA_DIRECTORY}/avatars;
		try_files $uri $uri.png $uri.jpg $uri.gif $uri.jpeg $uri.jfif /default.jpg = 404;
	}
}